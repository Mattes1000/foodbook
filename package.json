{
  "name": "foodbook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c green,cyan \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm run start",
    "lint": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
